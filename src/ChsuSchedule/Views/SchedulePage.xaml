<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
						 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
						 x:Class="ChsuSchedule.Views.SchedulePage"
						 Title="Расписание ЧГУ">
	<StackLayout>
		
		<ListView ItemsSource="{Binding ScheduleDays}" IsGroupingEnabled="True" RowHeight="60">
			<ListView.GroupHeaderTemplate>
				<DataTemplate>
					<ViewCell Height="25">
						<StackLayout Padding="5">
							<Label Text="{Binding Key, StringFormat='{0:ddd, d MMMM}'}" FontSize="Medium" FontAttributes="Bold"/>
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.GroupHeaderTemplate>
			
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<ViewCell.View>
							<StackLayout Orientation="Vertical" Spacing="5" >
								<Label Text="{Binding DurationAndSubject}"/>
								<StackLayout Orientation="Horizontal">
									<Label Text="{Binding Teacher}"/>
									<Label Text="{Binding Classroom}"/>
								</StackLayout>
							</StackLayout>
						</ViewCell.View>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
		
	</StackLayout>
</ContentPage>