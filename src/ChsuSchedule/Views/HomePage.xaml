<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
						 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
						 x:Class="ChsuSchedule.Views.HomePage"
						 Title="Расписание ЧГУ">
	<StackLayout Padding="10, 10, 10, 10">
		<StackLayout Orientation="Horizontal">
			<Label Text="Группа" FontSize="Medium"/>
			<Entry Placeholder="Группа" Text="{Binding SelectedGroup}" HorizontalOptions="EndAndExpand" VerticalOptions="FillAndExpand" FontSize="Medium"/>
		</StackLayout>
		<StackLayout Orientation="Horizontal">
			<Label Text="Дата" FontSize="Medium"/>
			<DatePicker Date="{Binding SelectedDate}" HorizontalOptions="EndAndExpand" VerticalOptions="FillAndExpand"/>
		</StackLayout>
		<StackLayout Orientation="Horizontal" >
			<Label Text="На неделю" FontSize="Medium"/>
			<Switch IsToggled="{Binding ShowAllWeek}" HorizontalOptions="EndAndExpand" VerticalOptions="FillAndExpand"/>	
		</StackLayout>

		<Button Text="Расписание" Command="{Binding ShowScheduleCommand}" CommandParameter="{Binding Configuration}"/>

