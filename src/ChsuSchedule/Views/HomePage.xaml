<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
						 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
						 x:Class="ChsuSchedule.Views.HomePage"
						 Title="Расписание ЧГУ">
	<StackLayout Padding="10,10,10,10">
		<StackLayout Orientation="Horizontal">
			<Label Text="Группа"/>
			<Entry Placeholder="Группа" Text="{Binding SelectedGroup}" HorizontalOptions="FillAndExpand" FontSize="Medium"/>
		</StackLayout>
		<StackLayout Orientation="Horizontal">
			<Label Text="Дата" FontSize="Medium"/>
			<DatePicker Date="{Binding SelectedDate}" HorizontalOptions="EndAndExpand"/>
		</StackLayout>
		<StackLayout Orientation="Horizontal" >
			<Label Text="На неделю" FontSize="Large"/>
			<Switch IsToggled="{Binding ShowAllWeek}" HorizontalOptions="EndAndExpand" VerticalOptions="FillAndExpand"/>	
		</StackLayout>
		
		<ListView ItemsSource="{Binding ScheduleDays}">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<Label Text="{Binding Date}"></Label>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
		
		<!--<TableView Intent="Settings">
			<TableView.Root>
				<TableRoot>
					<TableSection Title="Настройки">
						<EntryCell Label="Группа" Placeholder="Группа" Text="{Binding SelectedGroup}" />
						<SwitchCell On="{Binding ShowAllWeek}" Text="На неделю"/>
					</TableSection>
				</TableRoot>
			</TableView.Root>
		</TableView>-->
		
	</StackLayout>
</ContentPage>